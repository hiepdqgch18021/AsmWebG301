{% extends 'base.html.twig' %}

{% block title %}Semester index{% endblock %}

{% block body %}
    <h1>Semester index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>TimeStart</th>
                <th>TimeEnd</th>
                <th>Tuition</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for semester in semesters %}
            <tr>
                <td>{{ semester.id }}</td>
                <td>{{ semester.name }}</td>
                <td>{{ semester.timeStart ? semester.timeStart|date('Y-m-d') : '' }}</td>
                <td>{{ semester.timeEnd ? semester.timeEnd|date('Y-m-d') : '' }}</td>
                <td>{{ semester.tuition }}</td>
                <td>
                    <a href="{{ path('crud_semester_show', {'id': semester.id}) }}">show</a>
                    <a href="{{ path('crud_semester_edit', {'id': semester.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('crud_semester_new') }}">Create new</a>
{% endblock %}
